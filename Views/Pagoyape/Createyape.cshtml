@model hostal.Models.Pagoyape
@{
    ViewData["Title"] = "Pagoyape";
}


<section id="catalogue" class="catalogue section-bg">

<div class="container">
    <div class="section-title">
          <h2 data-aos="fade-in">Pagar QR</h2>
          
        </div>
        <div class="row">
          <div class="col-sm-10 mt-5">
           <form asp-controller="Pagoyape" asp-action="Pagar">
              <div class="form-group row">
                <input type="hidden" asp-for="UserID"/>
 <div class="col-sm-2">
                  <label asp-for="MontoTotal" class="control-label"></label>
                </div>
                <div class="col-sm-2">
                  <input asp-for="MontoTotal" class="form-control rounded-pill" data-thousands="," readonly />
                </div>
                <div class="col-sm-2">
                  <label asp-for="Capturayape" type="file"></label>
                </div>
                <div class="col-sm-2">
                  <input asp-for="Capturayape" type="file"/>
                </div>
    <div class="form-group row">
                <div class="col-sm-2"></div>
                <div class="col-sm-2">
                  <hr>
                  <button type="submit" class="btn btn-primary button">Pagar</button> 
                </div>
              </div>
                </form>
            <h1>@ViewData["Message"]</h1>
        </div>
</section>